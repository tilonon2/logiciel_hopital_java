<AnchorPane prefHeight="991.0" prefWidth="1082.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hopital.SpecialisteController">
   <children>
      <VBox alignment="CENTER" spacing="10.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0">
         <Label text="Tic-Tac-Toe" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
         <GridPane fx:id="board" gridLinesVisible="true">
            <columnConstraints>
               <ColumnConstraints percentWidth="33.33"/>
               <ColumnConstraints percentWidth="33.33"/>
               <ColumnConstraints percentWidth="33.33"/>
            </columnConstraints>
            <rowConstraints>
               <RowConstraints percentHeight="33.33"/>
               <RowConstraints percentHeight="33.33"/>
               <RowConstraints percentHeight="33.33"/>
            </rowConstraints>
            <Button fx:id="button0" onAction="#handleButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="0" prefHeight="100" prefWidth="100"/>
            <Button fx:id="button1" onAction="#handleButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="0" prefHeight="100" prefWidth="100"/>
            <Button fx:id="button2" onAction="#handleButtonAction" GridPane.columnIndex="2" GridPane.rowIndex="0" prefHeight="100" prefWidth="100"/>
            <Button fx:id="button3" onAction="#handleButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="1" prefHeight="100" prefWidth="100"/>
            <Button fx:id="button4" onAction="#handleButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="1" prefHeight="100" prefWidth="100"/>
            <Button fx:id="button5" onAction="#handleButtonAction" GridPane.columnIndex="2" GridPane.rowIndex="1" prefHeight="100" prefWidth="100"/>
            <Button fx:id="button6" onAction="#handleButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="2" prefHeight="100" prefWidth="100"/>
            <Button fx:id="button7" onAction="#handleButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="2" prefHeight="100" prefWidth="100"/>
            <Button fx:id="button8" onAction="#handleButtonAction" GridPane.columnIndex="2" GridPane.rowIndex="2" prefHeight="100" prefWidth="100"/>
         </GridPane>
         <Label fx:id="statusLabel" text="Player X's turn"/>
         <Button text="Restart" onAction="#handleRestart"/>
      </VBox>
   </children>
</AnchorPane>
